<Window x:Class="Leo_travel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="450
        ">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="http://www.mandrivochka.if.ua/sites/default/files/lviv.jpg"/>
        </Grid.Background>
        <TabControl HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="450" Opacity="1" Background="Transparent">
            <TabItem Header="Tab1">
                <Grid Background="#FFE5E5E5" Opacity="0"/>
            </TabItem>
            <TabItem Header="Tab2">
                <Grid Background="#FFE5E5E5" Opacity="0"/>
            </TabItem>
            <TabItem Header="Tab3">
                <Grid Background="#FFE5E5E5" Opacity="0"/>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
