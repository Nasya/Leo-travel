                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="#FFE5E5E5" Opacity="0" Margin="0,0,0,-5"/>
            </TabItem>




        </TabControl>
        <Button  HorizontalAlignment="Left" Margin="411,4,0,0" VerticalAlignment="Top" Width="21" Height="13" Click="Button_Click"/>
