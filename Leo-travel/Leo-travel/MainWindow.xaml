        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leo-Travel" Height="450" Width="450
        " Cursor="Arrow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxWidth="450" MaxHeight="450" MinWidth="450" MinHeight="450" ScrollViewer.VerticalScrollBarVisibility="Disabled">

    <Grid>
